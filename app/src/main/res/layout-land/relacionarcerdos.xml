<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagebrickhouse"
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_height="150dp"
            app:srcCompat="@drawable/brickhouse" />

        <ImageView
            android:id="@+id/imagehayhouse"
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_height="150dp"
            app:srcCompat="@drawable/hayhouse" />

        <ImageView
            android:id="@+id/imagewoodhouse"
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_height="150dp"
            app:srcCompat="@drawable/woodhouse" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885">

        <ImageView
            android:id="@+id/imagewoodpig"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            app:srcCompat="@drawable/pigwood" />

        <ImageView
            android:id="@+id/imagebrickpig"
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_height="150dp"
            app:srcCompat="@drawable/brickpig" />

        <ImageView
            android:id="@+id/imagehaypig"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            app:srcCompat="@drawable/haypig" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>